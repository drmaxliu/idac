<% @tester = Tester.new %>
<% current_year = Date.current.year %>

<%= form_for(@tester) do |f| %>
  <% if @tester.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tester.errors.count, "error") %> prohibited this tester from being saved:</h2>

      <ul>
      <% @tester.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "測試者姓名" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :test_date, "設定測試日期" %><br />
    <%= f.date_select :test_date, :start_year => 2014 %>
  </div>
  <div class="field">
    <%= f.label :dob, "設定生日" %><br />
    <%= f.date_select :dob, :start_year => (current_year-10), :end_year => (current_year-3) %>
  </div>
  <div class="actions">
    <%= f.submit "設立新的測試", class: "btn btn-min btn-warning" %>
  </div>
<% end %>
