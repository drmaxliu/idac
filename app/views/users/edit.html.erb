  </div>


  <div class="actions">
    <%= f.submit "完成送出", class: "btn btn-min btn-warning"%>
  </div>
<% end %>

<%= link_to '顯示受測者資料', @user %> |
<%= link_to '顯示所有受測者', users_path %>

