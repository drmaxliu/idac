<center>

<h3>修改受測者資料</h3>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  	<%= f.label :name, "受測者姓名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
  	<%= f.label :school, "學校" %>
    <%= f.text_field :school %>
  </div>

  <div class="field">
  	<%= f.label :contact, "聯係人" %>
    <%= f.text_field :contact %>
  </div>

